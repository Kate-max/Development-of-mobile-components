<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Лучшая иллюстрация недели"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="italic" />

        </TableRow>


        <TableRow

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Художник"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Ван Лин (WLOP)"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="normal" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Жанр"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Цифровая живопись"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="normal" />
        </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Инструмент"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Photoshop"
                android:textAlignment="center"
                android:textSize="20sp" />
        </TableRow>

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Страна"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Китай"
                android:textAlignment="center"
                android:textSize="20sp" />
        </TableRow>


        <TableRow

            android:layout_width="match_parent"
            android:layout_height="381dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView

                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="317dp"
                android:background="#3F51B5"
                android:src="@drawable/wlop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </TableRow>

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="86dp">

            <EditText
                android:id="@+id/editTextText3"
                android:layout_width="172dp"
                android:layout_height="93dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:text="Ваше имя" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="397dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Подтвердите" />
        </TableRow>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3F51B5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="320dp"
                    android:layout_height="83dp"
                    android:layout_weight="1"
                    android:backgroundTint="#03A9F4"
                    android:src="@android:drawable/star_big_on" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="359dp"
                    android:layout_height="83dp"
                    android:layout_weight="1"
                    android:text="Like" />
            </TableRow>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>